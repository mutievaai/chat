<head>
  <title>Music Collaboration Platform</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!-- <link rel="stylesheet" href="css/navbar.css"/> -->
</head>
<body>
  <nav class="navbar fixed-top">
    <div class="navbar-brand">
      <a href="/">Musician Collaboration Platform</a>
    </div>
    <ul class="navbar-nav">
      <li><a href="/dashboard">Home Page</a></li>
      <% if (isAuthenticated) { %>
      <li><a href="/activity">Activity</a></li>
      <li><a href="/users">Users</a></li>
      <li><a href="/friends">Friends</a></li>
      <% if (user.role == "admin") {%>
      <li><a href="/admin"> admin panel </a></li>
      <% } %>
      <li><a href="/profile/<%= user._id %>">Profile</a></li>
      <li><a href="/logout">logout</a></li>
      <% } else { %>
      <li><a href="/login"> login </a></li>
      <% } %>
    </ul>
   
    <form action="/change-language" method="POST">
      <select name="lang" onchange="this.form.submit()">
        <option value="en" <%= lang === 'en' ? 'selected' : '' %>>English</option>
        <option value="ru" <%= lang === 'ru' ? 'selected' : '' %>>Русский</option>
        <option value="kz" <%= lang === 'kz' ? 'selected' : '' %>>Қазақша</option>
      </select>
    </form>
    
  </nav>
</body>

<%- include('layouts/header.ejs') %>
<head>
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/post.css">
</head>

<h3 class="mb-4">Post</h3>
<body>
  <div class="post-container">
    <div class="post">
      <div class="post-content">
        <h2 class="post-title"><%= post.title %></h2>
      </div>
      <div class="post-content-image">
        <img src="data:image/jpeg;base64,<%= post.image %>" alt="Post image">
      </div>
      <div class="post-content">
        <p class="post-body"><%= post.content %></p>
      </div>
    </div>
    <div class="comments">
      <h3>Comments</h3>
      <% comments.forEach(comment => { %>
        <div class="comment">
          <h4><%= comment.user_id.name %></h4>
          <p><%= comment.content %></p>
        </div>
      <% }) %>
    </div>
    <div class="comment-form">
      <h3>Write a comment</h3>
      <form action="/post/<%= post._id %>/comments" method="POST">
        <textarea name="text" placeholder="Write your comment here..." required></textarea>
        <button type="submit">Submit</button>
      </form>
    </div>
  </div>
</body>
